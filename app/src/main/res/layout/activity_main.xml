<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/conDis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/adamina"
        android:textSize="24dp"
        android:textColor="#0c9ccc"
        app:layout_constraintBottom_toTopOf="@+id/textPort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gif" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/giphy_world"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textPort">

        <TextView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/text_shape"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="Connect Proxy"
            android:textAllCaps="true"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/Disonnect"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="24dp"
            android:backgroundTint="@color/gray"
            android:background="@drawable/text_shape"
            android:gravity="center"
            android:text="Disonnect Proxy"
            android:visibility="gone"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/Progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/white" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>